<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">
	<application>
	<message-bundle>resources.application</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>fr</supported-locale>
		</locale-config>
	</application>
	<managed-bean>
		<managed-bean-name>customerBean</managed-bean-name>
		<managed-bean-class>com.oracle.shopforkids.beans.CustomerBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>shUser</managed-bean-name>
		<managed-bean-class>com.oracle.shopforkids.entities.ShUser</managed-bean-class>
		<managed-bean-scope>none</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>beans</managed-bean-name>
		<managed-bean-class>com.oracle.shopforkids.beans.beans</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	<managed-bean>
		<managed-bean-name>testBean</managed-bean-name>
		<managed-bean-class>com.oracle.shopforkids.beans.TestBean</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>
	
	
	<navigation-rule>
		<display-name>welcome</display-name>
		<from-view-id>/index.xhtml</from-view-id>
		<navigation-case>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>register</display-name>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{customerBean.confirm}</from-action>
			<from-outcome>success</from-outcome>
			<to-view-id>/confirmation.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>register</display-name>
		<from-view-id>/register.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{customerBean.confirm}</from-action>
			<from-outcome>failure</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Confirmation</display-name>
		<from-view-id>/confirmation.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{customerBean.gotoAdressForm}</from-action>
			<from-outcome>register_adress</from-outcome>
			<to-view-id>/register_address.jspx</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Confirmation</display-name>
		<from-view-id>/confirmation.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>reviewall</from-outcome>
			<to-view-id>/reviewall.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>register_address</display-name>
		<from-view-id>/register_address.jspx</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/account_created.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>reviewall</display-name>
		<from-view-id>/reviewall.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>success</from-outcome>
			<to-view-id>/account_created.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<display-name>Confirmation</display-name>
		<from-view-id>/confirmation.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{customerBean.BacktocreateUserForm}</from-action>
			<from-outcome>back</from-outcome>
			<to-view-id>/register.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	
	<validator>
		<display-name>com.oracle.shopforkids.utils.EmailValidator</display-name>
		<validator-id>emailvalidator</validator-id>
		<validator-class>com.oracle.shopforkids.utils.EmailValidator</validator-class>
	</validator>
	<validator>
		<description></description>
		<display-name>loginvalidator</display-name>
		<validator-id>loginvalidator</validator-id>
		<validator-class>com.oracle.shopforkids.utils.LoginValidator</validator-class>
	</validator>

</faces-config>
